@using EN.SuperRestaurant.MVC.Models.Orders
@model CreateUpdateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="container">

    <h1>Create Order</h1>

    <hr />

    <div class="row">
        <div class="col-md-4">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <select asp-for="CustomerId" class="form-control select-2" asp-items="@Model.CustomerLookup">
                        <option>-- Select a Customer --</option>
                    </select>
                    <label asp-for="CustomerId" class="control-label"></label>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="form-floating mt-3">
                    <select asp-for="MealIds" class="form-control select-2" asp-items="@Model.MealLookup"></select>
                    <label asp-for="MealIds" class="control-label"></label>
                    <span asp-validation-for="MealIds" class="text-danger"></span>
                </div>

                <div class="form-floating mt-3">
                    <input asp-for="Notes" class="form-control" placeholder="Notes" />
                    <label asp-for="Notes" class="control-label"></label>
                </div>


                <div class="form-group mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Create" class="btn btn-primary ms-2" />
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
