@using EN.SuperRestaurant.MVC.Models.Customers
@using EN.SuperRestaurant.Utils.Enums
@model CreateUpdateCustomerViewModel

@{
    ViewData["Title"] = "Create a Customers";
}

<div class="container">

    <h1>Create a Customers</h1>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <label asp-for="FirstName" class="control-label"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <label asp-for="LastName" class="control-label"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number" />
                    <label asp-for="MobileNumber" class="control-label"></label>
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <label asp-for="Address" class="control-label"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <select asp-for="Gender" class="form-control select-2" placeholder="Address" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                    <label asp-for="Gender" class="control-label"></label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="DateOfBirth" class="form-control" placeholder="Date of Birth" />
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            <input type="submit" value="Create" class="btn btn-primary ms-2" />
        </div>
    </form>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
